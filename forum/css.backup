// Import: fonts
@import url("https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100..700;1,100..700&family=Luckiest+Guy&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap");

@font-face {
    font-family: "SFHollywoodHills";
    src: url($SFHollywoodHills);
}

// Remove: bootstrap header
.bootstrap-mode {
    display: none !important;
}

// Remove: post highlight
.highlighted {
    animation: none !important;
}

// Edit: about page
.admins {
    display: none !important;
}

.moderators {
    display: none !important;
}

// Remove: new post welcome message
.new-user {
    display: none !important;
}

// Edit: avatar group flair
.avatar-flair {
    background-size: 30px 30px !important;
}

// Edit: flat button
.btn-flat {
    border-radius: 0.25rem !important;
}

.btn-default {
    border-radius: 0.35rem !important;
}

// Edit: avatar
img.avatar {
    border-radius: 50% !important;
}

.btn-flat>img.avatar {
    border-radius: 20% !important;
}

// Edit: header
.d-header {
    box-shadow: none !important;
}

// Edit: account buttons
.sign-up-button, .login-button {
    border-radius: 0.5rem;
}

// Edit: navbar logo
#site-logo {
    /* remove text highlight */
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    
    transition: transform 0.2s;
}

#site-logo:hover {
    transform: scale(1.02);
}

// Edit: navbar links
.headerLink {
  color: white;
  margin-top: 0.2vh;
  font-size: 1rem;
  font-weight: bold !important;
  font-family: "Josefin Sans", sans-serif;
  transition: opacity 0.2s ease-in-out;
  
  /* remove text highlight */
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

.headerLink:hover {
  opacity: 0.6;
  color: white;
  transition: opacity 0.2s ease-in-out;
}

// Edit: global notice
.alert-global-notice {
    font-weight: 500 !important;
    font-size: 1.35vh !important;
    text-align: center !important;
    border-radius: 0.45rem !important;
    background-color: #171717 !important;
}

// Remove: more button
.more-topics {
    display: none !important;
}

// Remove: internal mod/admin icon
span.staff .svg-icon-title {
    display: none;
}

.user-profile-names__primary .d-icon {
    display: none;
}

.user-card .first-row .names .d-icon, .group-card .first-row .names .d-icon {
    display: none;
}

// Edit: Category headers
.category-list .category-list-banner {
    border-radius: 0.5rem 1vh 0vh 0vh;
    background-image: url($forum-banner);
    background-size: cover;
    &.category-6::after {
        font-weight: bold !important;
        font-family: "Josefin Sans", sans-serif;
    }
    &.category-9::after {
        font-weight: bold !important;
        font-family: "Josefin Sans", sans-serif;
    }
}